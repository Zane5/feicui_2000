%section.sign_in.container
  .row.col-md-6.col-md-offset-3
    = form_tag sessions_path, class: 'sign_in' do
      %header
        %h1 
          = t :sign
      %fieldset
        = label_tag :email, "#{ t :email_address }"
        = email_field_tag :email 
        = label_tag :password, "#{ t :password }"
        = password_field_tag :password
      %fieldset
        = submit_tag "#{ t :sign }", class: "btn btn-success"
