.navbar.navbar-default
  .container-fluid
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-warning-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      %a.navbar-brand
        =t :website_brand
    .navbar-collapse.collapse.navbar-warning-collapse
      %ul.nav.navbar-nav
        %li= link_to "#{t :website_home}", home_path
      - if current_user
        %ul.nav.navbar-nav.navbar-right
          %li= link_to t :my_account
          %li= link_to t :top_up
          %li= link_to t :help
          %li= link_to t :complaint
          %li= link_to t :customer_services
          %li.dropdown
            %a.dropdown-toggle{"data-target" => "#", "data-toggle" => "dropdown", :href => "bootstrap-elements.html"}
              =t :welcome
              %b.caret
            %ul.dropdown-menu
              %li
                =link_to "#{ t :invite_a_friend }"
              %li.divider
              %li
                =link_to "#{ t :sign_out }", sign_out_path
      - else
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "#{ t :register }", register_path
          %li= link_to "#{ t :sign }", sign_in_path

